<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ic_game_icon"
            android:layout_width="140dp"
            android:layout_height="96dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_game_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/ic_game_icon"
            android:text="@string/app_name"
            android:textColor="#212121"
            android:textSize="16sp" />



        <RatingBar
            android:id="@+id/rb_game_rank"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_game_name"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/ic_game_icon"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="3" />

        <TextView
            android:id="@+id/tv_game_socre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_game_name"
            android:layout_margin="8dp"
            android:layout_toRightOf="@id/rb_game_rank"
            android:text="8.0分"
            android:textColor="#ff909090"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_game_player_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rb_game_rank"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/ic_game_icon"
            android:text="热度:290"
            android:textColor="#616161"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_game_comment_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rb_game_rank"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/tv_game_player_number"
            android:text="评论数:290"
            android:textColor="#616161"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">

        <include layout="@layout/common_split_line" />
    </LinearLayout>

</LinearLayout>