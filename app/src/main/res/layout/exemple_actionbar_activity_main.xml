<?xml version="1.0" encoding="utf-8"?>
<com.tlf.basic.base.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:abv="http://schemas.android.com/apk/res-auto"
                                        xmlns:tools="http://schemas.android.com/tools"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@android:color/white">


    <com.tanlifei.uikit.actionbar.ActionBarView
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_actionbar_standard_height"
        abv:abv_title_text="ActionBar示例"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/actionbar">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp">

                <Button
                    android:id="@+id/indeterminate"
                    style="@style/base_button_corners"
                    android:layout_marginBottom="10dp"
                    android:text="只有标题" />

                <Button
                    android:id="@+id/label_indeterminate"
                    style="@style/base_button_corners"
                    android:layout_marginBottom="10dp"
                    android:text="标准的(标准加返回)"/>

                <Button
                    android:id="@+id/detail_indeterminate"
                    style="@style/base_button_corners"
                    android:layout_marginBottom="10dp"
                    android:text="带一个操作文字的" />

                <Button
                    android:id="@+id/determinate"
                    style="@style/base_button_corners"
                    android:layout_marginBottom="10dp"
                    android:text="带一个操作按钮"/>

                <Button
                    android:id="@+id/annular_determinate"
                    style="@style/base_button_corners"
                    android:layout_marginBottom="10dp"
                    android:text="带文字和按钮"/>

                <Button
                    android:id="@+id/bar_determinate"
                    style="@style/base_button_corners"
                    android:layout_marginBottom="10dp"
                    android:text="所有操作"/>


            </LinearLayout>
        </ScrollView>


    </LinearLayout>


</com.tlf.basic.base.autolayout.AutoRelativeLayout>

