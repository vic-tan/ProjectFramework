<resources>

    <!-- ———————————————————————— theme 样式 ———————————————————————————————————————————— -->

    <style name="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- 沉浸式状态栏 -->
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">false</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay"
           parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay"
           parent="ThemeOverlay.AppCompat.Light"/>


    <!--app升级activity 样式 -->
    <style name="AppUpdateDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <!-- ———————————————————————— button 样式 ———————————————————————————————————————————— -->
    <!--  公用的button 矩形 -->
    <style name="base_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120px</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">40px</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--  公用的button 矩形 -->
    <style name="base_button_rectangle" parent="base_button">
        <item name="android:background">@drawable/common_button_rectangle_bg</item>
    </style>

    <!--  公用的button 圆角形 -->
    <style name="base_button_corners" parent="base_button">
        <item name="android:background">@drawable/common_button_corners_bg</item>
    </style>


    <!-- 底部tabs merge公用样式 -->
    <style name="common_fragmentnavigator_merge_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">130px</item>
        <item name="android:elevation">18px</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- 底部tabs 布局公用样式 -->
    <style name="common_fragmentnavigator_layout_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>


    <!-- 底部tabs 图片公用样式 -->
    <style name="common_fragmentnavigator_image_style2">
        <item name="android:layout_width">82px</item>
        <item name="android:layout_height">73px</item>
    </style>
    <!-- 底部tabs 字体公用样式 -->
    <style name="common_fragmentnavigator_title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">1px</item>
        <item name="android:textColor">@color/common_fragmentnavigator_color_tab_text</item>
        <item name="android:textSize">34px</item>
    </style>


    <style name="MatchWrapTv" parent="MatchWrap">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_btn_orange</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:onClick">onClick</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="AutoWrapTv" parent="AutoWrap">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_btn_orange</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:onClick">onClick</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!--修改密码item样式-->
    <style name="update_psd_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="update_psd_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="update_psd_edit">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textColorHint">#DDDDDD</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

</resources>
